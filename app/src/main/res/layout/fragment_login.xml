<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".login">


    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:background="@color/textInput"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="*************"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="15dp"
        app:cardCornerRadius="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:fontFamily="@font/roboto"
        android:text="Senha"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="386dp" />

    <ImageView
        android:layout_width="201dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="49dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:fontFamily="@font/roboto"
        android:text="Boas-vindas de volta!"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:fontFamily="@font/roboto"
        android:text="Entre com seu perfil de Empresa."
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:fontFamily="@font/roboto"
        android:text="E-mail"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="346dp"
        android:layout_height="45dp"
        android:background="@color/textInput"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="nivea@suporte.com.br"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="15dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="313dp" />


    <TextView
        android:id="@+id/textCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="192dp"
        android:fontFamily="@font/roboto"
        android:text="Mantenha-me conectado"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="506dp" />

    <Button
        android:layout_width="357dp"
        android:layout_height="59dp"
        android:background="@drawable/button_one"
        android:text="Entrar"
        android:textColor="@color/textCosmeet"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="598dp" />

</androidx.constraintlayout.widget.ConstraintLayout>